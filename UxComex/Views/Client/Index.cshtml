@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-12">
            <div class="row my-3">
                <div class="col-md-8">
                    <a href="@Url.Action("Create", "Client")" class="btn btn-success mb-4">
                        Adicionar Cliente
                    </a>
                </div>
                <form method="get" class="col-md-4">
                    <div class="input-group">
                        <select class="form-select" name="column">
                            <option selected value="name">Nome</option>
                            <option value="telephone">Telefone</option>
                            <option value="cpf">CPF</option>
                        </select>
                        <input type="text" class="form-control" placeholder="Procurar" name="search" value="@ViewData["CurrentFilter"]">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Telefone</th>
                            <th>CPF</th>
                            <th>Data de Criação</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var client in Model)
                        {
                            <tr>
                                <td>@client.Name</td>
                                <td>@client.Telephone</td>
                                <td>@client.Cpf</td>
                                <td>@client.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <a href="@Url.Action("Details", "Client", new { id = client.Id })" class="btn btn-primary">
                                        Detalhes
                                    </a>
                                    <a href="@Url.Action("Edit", "Client", new { id = client.Id })" class="btn btn-warning">
                                        Editar
                                    </a>
                                    <a href="@Url.Action("Delete", "Client", new { id = client.Id })" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja excluir este cliente?')">
                                        Excluir
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model.Count == 0)
            {
                <p>Nenhum cliente encontrado.</p>
            }
        </div>
    </div>
</div>
