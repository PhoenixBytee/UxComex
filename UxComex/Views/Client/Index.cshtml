@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-12">
            <a href="#" class="btn btn-success float-right mb-3" data-toggle="modal" data-target="#addClientModal">
                Adicionar Cliente
            </a>
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Telefone</th>
                        <th>CPF</th>
                        <th>Data de Criação</th>
                        <th>Data de Atualização</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var client in Model)
                    {
                        <tr>
                            <td>@client.Name</td>
                            <td>@client.Telephone</td>
                            <td>@client.Cpf</td>
                            <td>@client.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</td>
                            <td>@client.UpdateddAt.ToString("dd/MM/yyyy HH:mm:ss")</td>
                            <td>
                                <a href="@Url.Action("Details", "Client", new { id = client.Id })" class="btn btn-primary">
                                    Detalhes
                                </a>
                                <a href="@Url.Action("Edit", "Client", new { id = client.Id })" class="btn btn-warning">
                                    Editar
                                </a>
                                <a href="@Url.Action("Delete", "Client", new { id = client.Id })" class="btn btn-danger">
                                    Excluir
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal para adicionar cliente -->
<div class="modal fade" id="addClientModal" tabindex="-1" role="dialog" aria-labelledby="addClientModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addClientModalLabel">Adicionar Cliente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Formulário para adicionar cliente -->
            </div>
        </div>
    </div>
</div>

