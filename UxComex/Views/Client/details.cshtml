@model ClientDetailsViewModel

@{
    ViewBag.Title = "Client Details";
}

<div class="container mt-3">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>Informações do Cliente</h4>
        </div>
        <div class="card-body" style="background-color: #f8f9fa;">
            <div class="row mb-3">
                <div class="col-md-3">
                    <p class="text-muted mb-1">Nome:</p>
                    <p class="font-weight-bold mb-3">@Model.Client.Name</p>
                </div>
                <div class="col-md-3">
                    <p class="text-muted mb-1">Telefone:</p>
                    <p class="font-weight-bold mb-3">@Model.Client.Telephone</p>
                </div>
                <div class="col-md-3">
                    <p class="text-muted mb-1">CPF:</p>
                    <p class="font-weight-bold">@Model.Client.Cpf</p>
                </div>
                <div class="col-md-3">
                    <i class="fas fa-map-marker-alt fa-2x float-right mt-2"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <h4>Endereços</h4>
            <div class="mb-3">
                <a type="button" class="btn btn-success float-right" data-toggle="modal" data-target="#addAddressModal">Adicionar Endereço</a>
            </div>
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Rua</th>
                        <th>Cidade</th>
                        <th>Estado</th>
                        <th>Cep</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var address in Model.Addresses)
                    {
                        <tr>
                            <td>@address.Street</td>
                            <td>@address.City</td>
                            <td>@address.State</td>
                            <td>@address.ZipCode</td>
                            <td>
                                <a href="@Url.Action("Edit", "Client", new { id = address.Id })" class="btn btn-warning">
                                    Editar
                                </a>
                                <a href="@Url.Action("Delete", "Client", new { id = address.Id })" class="btn btn-danger">
                                    Excluir
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- Modal para adicionar endereço -->
<div class="modal fade" id="addAddressModal" tabindex="-1" role="dialog" aria-labelledby="addAddressModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addAddressModalLabel">Add Address</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">X</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="@Url.Action("Create", "Address")" method="POST">
                    <div class="form-group">
                        <label for="zipCode">CEP:</label>
                        <input type="text" class="form-control" id="zipCode" name="zipCode" required>
                    </div>
                    <div class="form-group">
                        <label for="street">Rua:</label>
                        <input type="text" class="form-control" id="street" name="street" required>
                    </div>
                    <div class="form-group">
                        <label for="city">Cidade:</label>
                        <input type="text" class="form-control" id="city" name="city" required>
                    </div>
                    <div class="form-group">
                        <label for="state">Estado:</label>
                        <input type="text" class="form-control" id="state" name="state" required>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<script>

    const cepInput = document.getElementById('zipCode');

    cepInput.addEventListener('input', function () {
        const maxLength = 8;
        const currentValue = cepInput.value.slice(0, maxLength);
        cepInput.value = currentValue;
    });

    cepInput.addEventListener('blur', async () => {
        const cep = cepInput.value.replace(/\D/g, '');
        const url = `https://viacep.com.br/ws/${cep}/json/`;

        const response = await axios.get(url);

        console.log(response);

        const data = response.data;

        document.getElementById('zipCode').value = data.cep || '';
        document.getElementById('street').value = data.logradouro || '';
        document.getElementById('city').value = data.localidade || '';
        document.getElementById('state').value = data.uf || '';
    });

</script>